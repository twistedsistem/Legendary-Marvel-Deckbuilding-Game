    <scripts>
      <script src="scripts/actions.py" />
    </scripts>
    <proxygen definitionsrc="proxy/proxydef.xml">
    </proxygen>
    <globalvariables>
        <globalvariable name="villainAmount" value="0"/>
        <globalvariable name="heroAmount" value="5"/>
        <globalvariable name="henchmenAmount" value="0"/>
        <globalvariable name="bystanderAmount" value="0"/>
        <globalvariable name="masterStrikeAmount" value="0"/>
        <globalvariable name="schemeTwistAmount" value="0"/>
    </globalvariables>
    <card back="cards/back.png" front="cards/front.png" width="126" height="176" cornerRadius="2">
      <property name="Name"  type="String"/>
      <property name="CardType"  type="String"/>
      <property name="SetupNumber" type="String"/>
      <property name="HeroOrVillianName"  type="String"/>
      <property name="Affiliation"  type="String"/>
      <property name="Type"  type="String"/>
      <property name="Cost"  type="String"/>
      <property name="Recruit"  type="String"/>
      <property name="Attack"  type="String"/>
      <property name="Victory"  type="String"/>
      <property name="PrimaryAbility"  type="String"/>
      <property name="SuperAbilityTrigger"  type="String"/>
      <property name="SuperAbility"  type="String"/>
      <property name="VillainAbility"  type="String"/>
      <property name="Card Text"  type="String"/>
      <property name="ActionScript"  type="String"/>
      <property name="AutoScript"  type="String"/>
    </card>
    <table name="Table" visibility="undefined" ordered="False" width="1300" height="808" background="background/background.jpg" board="background/Tabletop.jpg" boardPosition="-650,-370,1300,808" backgroundStyle="uniformToFill">
        <groupaction menu="Setup Game" shortcut="ctrl+shift+s" default="False" execute="setupGame" />
        <groupaction menu="Draw" shortcut="ctrl+D" default="True" execute="draw" />
        <groupaction menu="Draw X Cards" shortcut="ctrl+shift+D" execute="drawMany" />
        <groupaction menu="Send Top X Cards to the Discard Pile" execute="mill" />
        <groupaction menu="Shuffle" shortcut="ctrl+S" execute="shuffle" />
        <groupaction menu="Roll a 6-sided Die" shortcut="ctrl+r" execute="rolldice" />
        <groupaction menu="Flip a Coin" shortcut="ctrl+shift+r" execute="flipcoin" />
        <groupaction menu="Interrupt Game" shortcut="enter" execute="interrupt" />
        <groupaction menu="Pass" shortcut="tab" execute="passturn" />
        <groupaction menu="Sit/Stand" shortcut="alt+s" execute="sitstand" />
        <groupaction menu="SSStatus" shortcut="ctrl+alt+s"  execute="ssstatus" />
        <groupaction menu="Become Dealer" shortcut="ctrl+B" execute="becomedealer" />
        <groupaction menu="Who's Dealer?" execute="whosdealer" />
        <cardaction menu="Turn card Sideways" default="True" execute="tap" />
        <cardaction menu="Flip Card" shortcut="ctrl+f" execute="flip" />
        <cardaction menu="Discard Card" shortcut="del" execute="discard" />
        <cardaction menu="Add/Remove Red Highlight" shortcut="ctrl+A" execute="highlightcard" />
        <cardaction menu="Add Marker" shortcut="ctrl+Q" execute="addmarker" />
        <cardaction menu="Remove Marker" shortcut="ctrl+W" execute="removemarker" />
        <cardaction menu="Add Custom Marker..." shortcut="ctrl+shift+Q" batchExecute="addanymarker" />
    </table>
   <player summary="Hand:{#Hand} Score:{#Score}">
    <globalvariable name="standing" value="1" />
    <counter name="Score" icon="counters/score.png" />
    <hand name="Hand" shortcut="ctrl+H" visibility="me" ordered="False" width="63" height="88" icon="groups/hand.png">
       <cardaction menu="Discard Card" shortcut="del" execute="discard" />
    </hand>
    <group name="Discard" shortcut="ctrl+H" visibility="me" ordered="False" width="63" height="88" icon="groups/discardpile.png">
       <cardaction menu="Discard Card" shortcut="del" execute="discard" />
    </group>
    <group name="Deck" shortcut="ctrl+H" visibility="none" ordered="False" width="63" height="88" icon="groups/deck.png">
       <cardaction menu="Discard Card" shortcut="del" execute="discard" />
    </group>
  </player>
